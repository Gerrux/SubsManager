<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="40dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginRight="5dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_bg_capsule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/analytics_selector"
        app:layout_constraintBottom_toTopOf="@+id/current_month_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/current_month_amount"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-25dp"
        android:background="@drawable/analytics_selector"
        android:fontFamily="@font/ibm_regular"
        android:gravity="center"
        android:rotation="-90"
        android:singleLine="true"
        android:text="360 RUB"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bg_capsule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/bottom_bg_capsule"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:rotation="-180"
        android:background="@drawable/analytics_selector"
        app:layout_constraintBottom_toTopOf="@+id/analytics_month_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/analytics_month_title"
        style="@style/headline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Aug"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>