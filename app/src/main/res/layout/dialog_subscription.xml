<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/subscription_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscription Name" />

    <TextView
        android:id="@+id/subscription_price_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscription Price" />

    <Button
        android:id="@+id/edit_subscription_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_subscription" />

    <Button
        android:id="@+id/delete_subscription_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_subscription" />

</LinearLayout>